{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.HttpsPolicy": "Debug" 
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "book-api-route": {
        "ClusterId": "book-api-cluster",
        "Match": {
          "Path": "/api/Book/{**catch-all}"
        }
      },
      "account-api-route": {
        "ClusterId": "account-api-cluster",
        "Match": {
          "Path": "/api/Account/{**catch-all}"
        }
      },
      "auth-api-route": {
        "ClusterId": "auth-api-cluster",
        "Match": {
          "Path": "/api/Auth/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "book-api-cluster": {
        "HttpClient": {
          "SslProtocols": [ "Tls11", "Tls12" ],
          "DangerousAcceptAnyServerCertificate": true
        },
        "Destinations": {
          "book-api-destination": {
            "Address": "https://book-api:443",            
            "Metadata": {
              "Scheme": "https"               
            }
          }
        }
      },
      "account-api-cluster": {
        "HttpClient": {
          "SslProtocols": [ "Tls11", "Tls12" ],
          "DangerousAcceptAnyServerCertificate": true
        },
        "Destinations": {
          "book-api-destination": {
            "Address": "https://account-api:444",
            "Metadata": {
              "Scheme": "https"
            }
          }
        }
      },
      "auth-api-cluster": {
        "HttpClient": {
          "SslProtocols": [ "Tls11", "Tls12" ],
          "DangerousAcceptAnyServerCertificate": true
        },
        "Destinations": {
          "book-api-destination": {
            "Address": "https://auth-api:445",
            "Metadata": {
              "Scheme": "https"
            }
          }
        }
      }
    }
  }
}
