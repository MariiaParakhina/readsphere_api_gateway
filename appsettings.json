{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.HttpsPolicy": "Debug"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "book-api-route": {
        "ClusterId": "book-api-cluster",
        "Match": {
          "Path": "/api/Book/{**catch-all}"
        }
      },
      "account-api-route": {
        "ClusterId": "account-api-cluster",
        "Match": {
          "Path": "/api/Account/{**catch-all}"
        }
      },
      "auth-api-route": {
        "ClusterId": "auth-api-cluster",
        "Match": {
          "Path": "/api/Auth/{**catch-all}"
        }
      },
      "progress-api-route": {
        "ClusterId": "progress-api-cluster",
        "Match": {
          "Path": "/api/Progress/{**catch-all}"
        }
      },
      "prometheus-route": {
        "ClusterID":"prometheus-cluster",
        "Match": {
          "Path": "/prometheus/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "prometheus-cluster": {
        "Destinations": {
          "prometheus-kubernetes-destination": {
            "Address": "http://prometheus-service.prometheus.svc.cluster.local:9090"
          }
        }
      },
      "book-api-cluster": {       
        "HttpClient": {
          "SslProtocols": [
            "Tls11",
            "Tls12"
          ],
          "DangerousAcceptAnyServerCertificate": true
        },
        "Destinations": {
          "book-api-kubernetes-destination": {
            "Address": "https://book-api.book.svc.cluster.local:443",
            "Metadata": {
              "Scheme": "https"
            }
          }          
        }
      },
      "account-api-cluster": {
        "HttpClient": {
          "SslProtocols": [
            "Tls11",
            "Tls12"
          ],
          "DangerousAcceptAnyServerCertificate": true
        },
        "Destinations": {
          "progress-api-kubernetes-destination": {
            "Address": "https://account-api.account.svc.cluster.local:444",
            "Metadata": {
              "Scheme": "https"
            }
          }
        }
      },
      "auth-api-cluster": {
        "HttpClient": {
          "SslProtocols": [
            "Tls11",
            "Tls12"
          ],
          "DangerousAcceptAnyServerCertificate": true
        },
        "Destinations": {
          "auth-api-kubernetes-destination": {
            "Address": "https://auth-api.auth.svc.cluster.local:445",
            "Metadata": {
              "Scheme": "https"
            }
          }
        }
      },
      "progress-api-cluster": {
        "HttpClient": {
          "SslProtocols": [
            "Tls11",
            "Tls12"
          ],
          "DangerousAcceptAnyServerCertificate": true
        },
        "Destinations": {
          "progress-api-kubernetes-destination": {
            "Address": "https://progress-api.progress.svc.cluster.local:446",
            "Metadata": {
              "Scheme": "https"
            }
          }
        }
      }
    }
  }
}
